{
  "name": "lms-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:admin\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:admin": "npm run dev --workspace=admin",
    "build": "npm run build --workspace=admin && npm run build --workspace=server",
    "start": "node packages/server/build/server.js",
    "install:all": "npm install && npm install --workspace=server && npm install --workspace=admin",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "resend": "^6.5.0",
    "expo": "~52.0.47",
    "react": "18.3.1",
    "react-native": "0.76.9"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
